<div class="mdc-layout-grid">
  <div class="mdc-layout-grid__inner">
    <div class="mdc-layout-grid__cell mdc-layout-grid__cell--span-6-desktop mdc-layout-grid__cell--span-4-tablet mdc-layout-grid__cell--span-4-phone">
      <div class="mdc-data-table mdc-elevation--z4 ckp-table-container">
        <div class="mdc-data-table__table-container">
          <table class="mdc-data-table__table ckp-table" aria-label="IP information">
            <thead>
              <tr class="mdc-data-table__header-row">
                <th class="mdc-data-table__header-cell" role="columnheader" scope="col">Parameter</th>
                <th class="mdc-data-table__header-cell" role="columnheader" scope="col">Value</th>
              </tr>
            </thead>
            <tbody class="mdc-data-table__content">
              <tr class="mdc-data-table__row">
                <th class="mdc-data-table__cell" scope="row">IP Address</th>
                <td class="mdc-data-table__cell"><%= checker.ip %></td>
              </tr>
              <tr class="mdc-data-table__row">
                <th class="mdc-data-table__cell" scope="row">Hostname</th>
                <td class="mdc-data-table__cell"><%= checker.hostname %></td>
              </tr>
              <tr class="mdc-data-table__row">
                <th class="mdc-data-table__cell" scope="row">Country</th>
                <td class="mdc-data-table__cell"><%= checker.country %></td>
              </tr>
              <tr class="mdc-data-table__row">
                <th class="mdc-data-table__cell" scope="row">Region</th>
                <td class="mdc-data-table__cell"><%= checker.region %></td>
              </tr>
              <tr class="mdc-data-table__row">
                <th class="mdc-data-table__cell" scope="row">City</th>
                <td class="mdc-data-table__cell"><%= checker.city %></td>
              </tr>
              <tr class="mdc-data-table__row">
                <th class="mdc-data-table__cell" scope="row">AS Number</th>
                <td class="mdc-data-table__cell"><%= checker.asn[:asn] %></td>
              </tr>
              <tr class="mdc-data-table__row">
                <th class="mdc-data-table__cell" scope="row">AS Organization</th>
                <td class="mdc-data-table__cell"><%= checker.asn[:name] %></td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
    <div class="mdc-layout-grid__cell mdc-layout-grid__cell--span-6-desktop mdc-layout-grid__cell--span-4-tablet mdc-layout-grid__cell--span-4-phone">
      <div class="ckp-json-output mdc-elevation--z4"><pre><%= checker_json %></pre></div>
    </div>
  </div>
</div>
