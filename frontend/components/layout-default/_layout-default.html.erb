<div id="tooltip-api" class="mdc-tooltip" role="tooltip" aria-hidden="true">
  <div class="mdc-tooltip__surface mdc-tooltip__surface-animation"><%= t('pages.application.core.tooltip_api') %></div>
</div>
<div id="tooltip-github" class="mdc-tooltip" role="tooltip" aria-hidden="true">
  <div class="mdc-tooltip__surface mdc-tooltip__surface-animation"><%= t('pages.application.core.tooltip_github') %></div>
</div>
<div class="mdc-typography">
  <header class="mdc-top-app-bar ckp-header-fixed">
    <div class="mdc-top-app-bar__row">
      <section class="mdc-top-app-bar__section mdc-top-app-bar__section--align-start">
        <span class="mdc-top-app-bar__title"><%= link_to t('pages.application.core.brand'), root_path %></span>
      </section>
      <section class="mdc-top-app-bar__section mdc-top-app-bar__section--align-end" role="toolbar">
        <div class="mdc-touch-target-wrapper">
          <button class="mdc-icon-button mdc-icon-button--touch" data-tooltip-id="tooltip-api" aria-label="<%= t('pages.application.core.tooltip_api') %>" id="api-link">
            <div class="mdc-icon-button__ripple"></div>
            <i class="fas fa-code fa-xs"></i>
            <div class="mdc-icon-button__touch"></div>
          </button>
        </div>
        <div class="mdc-touch-target-wrapper">
          <button class="mdc-icon-button mdc-icon-button--touch" data-tooltip-id="tooltip-github" aria-label="<%= t('pages.application.core.tooltip_github') %>" id="github-link">
            <div class="mdc-icon-button__ripple"></div>
            <i class="fab fa-github fa-xs"></i>
            <div class="mdc-icon-button__touch"></div>
          </button>
        </div>
      </section>
    </div>
  </header>
  <main class="ckp-layout-fixed">
    <%= yield %>
    <div class="ckp-powered-by"><%= t('pages.application.core.made_with_html', heart: tag.span(tag.i(class: 'fas fa-heart'), class: 'ckp-heart-icon'), checkip: (link_to 'CheckIP', 'https://github.com/checkip/checkip')) %></div>
    <div class="ckp-powered-by"><%= t('pages.application.core.ip_geolocation_by_html', db_source_url: link_to(t('pages.application.core.ip_geolocation_brand'), t('pages.application.core.ip_geolocation_source'))) %></div>
  </main>
</div>
